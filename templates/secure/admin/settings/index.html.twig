{% extends 'secure/admin/index.html.twig' %}

{% block title %}Admin Dashboard - Word Filter
{% endblock %}

{% block main %}
<div class="row">
    <div class="col-g">
    {% set section = "" %}
    {% for setting_form in forms %}
        {# {% dump(setting_form.vars.value) %} #}
        {% if section != setting_form.vars.data.section %}
            {% set section = setting_form.vars.data.section %}
            <h3>{{ section }}</h3>
        {% endif %}
        {% include('secure/admin/settings/_setting_form.html.twig') %}
    {% endfor %}
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin_settings') }}
{% endblock %}