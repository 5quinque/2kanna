{{ form_start(register_form) }}
{{ form_errors(register_form) }}
<div class="form-group">
    <div class="form-row">
        {{ form_errors(register_form.username) }}
        <div class="col">
            <div class="input-group">
                {{ form_widget(register_form.username) }}
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="form-row">
        {{ form_errors(register_form.plainPassword) }}
        <div class="col">
            <div class="input-group">
                {{ form_widget(register_form.plainPassword) }}
            </div>
        </div>
    </div>
</div>
<div class="input-group">
    <button class="btn btn-primary">{{ button_label|default('Register') }}</button>
</div>
{{ form_end(register_form) }}
