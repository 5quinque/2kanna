{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="admin">Admin Dashboard</h1>
            </div>
        </div>
    </div>
    <hr>
    {# read and display all flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-dismissible alert-{{ label }}">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        {{ message }}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row">
        <div class="col-4">
            <h4>Bans</h4>
            {{ include('admin/_banned_form.html.twig') }}
            <ul class="list-group">
                {% for ip in banned_ips %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ ip.ipAddress }}
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-4">
            <h4>Users</h4>
        </div>
        <div class="col-4">
            <h4>Word Filter</h4>
        </div>
    </div>
{% endblock %}
