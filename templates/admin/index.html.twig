{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="admin">Admin Dashboard</h1>
            </div>
        </div>
    </div>
    <hr>
    {# read and display all flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-dismissible alert-{{ label }}">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        {{ message }}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}

<div class="row">
<div class="col-12">
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" data-toggle="tab" href="#bans">Bans</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#users">Users</a>
  </li>
<li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#wordfilter">Word Filter</a>
  </li>
</ul>
<div class="tab-content pt-2">
  <div class="tab-pane fade active show" id="bans">
              {{ include('admin/_banned_form.html.twig') }}
            <ul class="list-group">
                {% for ip in banned_ips %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ ip.ipAddress }}
                    </li>
                {% endfor %}
            </ul>
    <p></p>
  </div>
  <div class="tab-pane fade" id="users">
    <p>Users</p>
  </div>
  <div class="tab-pane fade" id="wordfilter">
    <p>Word Filter</p>
  </div>
</div>
</div>
</div>

{% endblock %}
