{% extends 'base.html.twig' %}

{% block title %}
    {{ board.name }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="boards">{{ board.name }}
                    <a class="btn btn-sm btn-dark float-right" href="{{ path('board_index') }}">back</a>
                </h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 m-auto">
            {% set button_label='New Post' %}
            {{ include('post/_form.html.twig') }}
        </div>
    </div>
    <hr>
    <div class="row">
        {% if posts|length %}
            {% for row in posts|batch(posts|length/3) %}
                <div class="col-4">
                    {% for post in row %}
                        <div class="media p-2 m-2">
                            <div class="media-body">
                                <div class="mt-0">
                                    <button type="button" class="btn-collapse" aria-label="Collapse" data-toggle="collapse" data-target="#{{ post.id }}" aria-expanded="true" aria-controls="{{ post.id }}">
                                        <span aria-hidden="true" class="text-muted">&minus;</span>
                                    </button>
                                    {{ post.title }}
                                    <sub class="float-right text-muted">
                                        {{ post.created|date("Y-m-d H:i:s") }}
                                        <a href="{{ path('post_show', {'name': post.board.name, 'id': post.id}) }}" class="">Reply</a>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                                            {{ include('post/_delete_form.html.twig') }}
                                        {% endif %}
                                    </sub>
                                </div>
                                <div id="{{ post.id }}" class="collapse show">
                                    <p class="m-0">{{ post.message|nl2br|gt2quote }}</p>
                                    {% for post in post.childpost|slice(0, 3) %}
                                        <div class="media p-2 m-2">
                                            <div class="media-body">
                                                <div class="mt-0">
                                                    <button type="button" class="btn-collapse" aria-label="Collapse" data-toggle="collapse" data-target="#{{ post.id }}" aria-expanded="true" aria-controls="{{ post.id }}">
                                                        <span aria-hidden="true" class="text-muted">&minus;</span>
                                                    </button>
                                                    {{ post.title }}
                                                    <sub class="float-right text-muted">
                                                        {{ post.created|date("Y-m-d H:i:s") }}
                                                        <a href="{{ path('post_show', {'name': post.board.name, 'id': post.id}) }}" class="">Reply</a>
                                                        {% if is_granted('ROLE_ADMIN') %}
                                                            <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                                                            {{ include('post/_delete_form.html.twig') }}
                                                        {% endif %}
                                                    </sub>
                                                </div>
                                                <div id="{{ post.id }}" class="collapse show">
                                                    <p class="m-0">{{ post.message|nl2br|gt2quote }}</p>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                    {% endfor %}
                </div>
            {% endfor %}

        {% else %}
            <div class="col-12">
                <p>No posts to show.</p>
            </div>
        {% endif %}
    </div>

{% endblock %}
