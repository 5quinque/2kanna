{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <h1 id="board_index">Boards
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-sm btn-dark float-right" href="{{ path('board_new') }}">New Board</a>
                    {% endif %}
                </h1>
            </div>
        </div>
    </div>
    <div class="row text-center">
        {% if boards|length %}
            {% for col in boards|batch(boards|length/2) %}
                <div class="col-6">
                    <div class="list-group">
                        {% for board in col %}
                            <a href="{{ path('board_show', {'name': board.name}) }}" class="list-group-item list-group-item-action mb-2">
                                {{ board.name }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <span class="list-group-item">No boards found.</span>
        {% endif %}
    </div>
{% endblock %}
