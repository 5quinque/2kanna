{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-100">
            <div class="page-header">
                <h1 id="board_index">Boards
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-sm btn-dark float-right" href="{{ path('board_new') }}">New Board</a>
                    {% endif %}
                </h1>
            </div>
        </div>
    </div>
    <div class="row text-center">
        {% if boards|length %}
            {% for board in boards %}
                <div class="col-25">
                    <a href="{{ path('board_show', {'name': board.name}) }}" class="list-group-item list-group-item-action mb-2">
                        {{ board.name }}
                    </a>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-100">No boards found.</div>
        {% endif %}
    </div>
{% endblock %}
