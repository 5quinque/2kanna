{% extends 'base.html.twig' %}

{% block title %}Board index
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="board_index">Board Index</h1>
                <a class="btn btn-sm btn-dark" href="{{ path('board_new') }}">New Board</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 m-auto">
            <div class="list-group list-group-flush">
                {% for board in boards %}
                    <a href="{{ path('board_show', {'name': board.name}) }}" class="list-group-item list-group-item-action">
                        {{ board.name }}
                    </a>
                {% else %}
                    <span class="list-group-item">No boards found.</span>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
